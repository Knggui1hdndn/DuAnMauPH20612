<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:padding="15dp"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/mRelativeLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTenLoaiSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Tên loại sách - "
android:textStyle="bold"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtMaLoaiSach"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Mã loại sách"
            android:textColor="#FF5722"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/imgDelete"
        android:text="Nguyễn Duy Khang thôn 8 Lê Xá Tú Sơn Kiến Thuy Hải Phòng" />

    <TextView
        android:id="@+id/txtViTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMoTa"
        android:text="Dãy P kệ số 3" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_clear_24"
        android:text="" />
</RelativeLayout>
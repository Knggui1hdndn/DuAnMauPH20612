<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/mRelativeLayout"
    android:padding="15dp">

    <TextView
        android:id="@+id/maPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/maTV"
        android:layout_toRightOf="@id/maTV"
        android:text="Mã phiếu mượn"
        android:textColor="#FB0303"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/maTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Nguyễn Duy Khang"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/maSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maTV"
        android:text="Tên sách" />

    <TextView
        android:id="@+id/gio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@id/ngayMuon"
        android:text="Giờ mua hàng" />
    <TextView
        android:id="@+id/ngayMuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maSach"


        android:text="Ngày Mượn" />

    <TextView
        android:id="@+id/traSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/imgDelete"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:text="Trạng thái" />

    <TextView
        android:id="@+id/tienthue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/maTV"
        android:text="Tiền thuê" />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_clear_24"
        android:text="" />
</RelativeLayout>